<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/detailsCard"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/result_Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:padding="7dp"
                        android:text="Enter your vehicle details"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <Spinner
                    android:id="@+id/spinner_unit"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="@+id/detailsCard"
                    app:layout_constraintLeft_toRightOf="@id/detailsCard"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/detailsCard" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/layout_bg2"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />

                <EditText
                    android:id="@+id/model_Year"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#C0C0C0"
                    android:layout_marginTop="30dp"
                    android:hint="Model Year"
                    android:textAlignment="center" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/layout_bg2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/horse_Power"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#C0C0C0"
                    android:hint="Horse Power"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"

                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
               android:layout_marginBottom="1dp"
                android:background="@drawable/layout_bg2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />

                <EditText
                    android:id="@+id/acceleration"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#C0C0C0"

                    android:layout_marginTop="30dp"
                    android:hint="Acceleration"
                    android:textAlignment="center" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="1dp"

                android:background="@drawable/layout_bg2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cylinders"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#C0C0C0"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:hint="Cylinders"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/layout_bg2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />

                <EditText
                    android:id="@+id/weights"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#C0C0C0"
                    android:layout_marginTop="30dp"
                    android:hint="Weights"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="1dp"

                android:background="@drawable/layout_bg2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/displacement"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#C0C0C0"
                    android:textColor="#C0C0C0"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:hint="Displacement"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/layout_bg2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/car3" />



                <Spinner
                    android:id="@+id/origin_Spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_Predict"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_dec"
                    android:text="Predict"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>