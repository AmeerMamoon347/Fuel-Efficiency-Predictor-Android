<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92A0AD"
    tools:context=".Welcome_Activity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/fuel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintBottom_toBottomOf="parent"

        >


        <TextView
            android:id="@+id/fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/vegan_style"
            android:text="Fuel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/efficiency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tomatoes"
            android:text="Efficiency"

            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="50dp"
            />

        <TextView
            android:id="@+id/predictor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/quick"
            android:textColor="@color/black"
            android:text="Predictor"
            android:textStyle="bold"
            android:textSize="60dp"
            android:layout_marginBottom="50dp"
         />


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>